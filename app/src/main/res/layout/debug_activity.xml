<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:text="/user" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center" />
    <Button android:id="@+id/debug_user_get" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Get user"/>
    <Button android:id="@+id/debug_user_put" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Update user"/>
    <Button android:id="@+id/debug_user_post" android:layout_width="match_parent" android:layout_height="wrap_content"  android:text="Create user"/>
    <Button android:id="@+id/debug_user_delete" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Delete user"/>
</LinearLayout>