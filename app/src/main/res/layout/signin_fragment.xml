<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/subscreen_horizontal_margin"
    android:layout_marginLeft="@dimen/subscreen_horizontal_margin">
    <TextView android:text="@string/signin_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center" />
    <EditText
        android:id="@+id/signin_username"
        android:layout_width="match_parent"
        android:hint="@string/sign_in_hint_username"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/signin_password"
        android:layout_width="match_parent"
        android:hint="@string/sign_in_hint_password"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/signin_forget_password"
        android:layout_width="match_parent"
        android:text="@string/sign_in_forget_password"
        android:gravity="right"
        android:textColor="@color/impressionAccent"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/signin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_button"/>

</LinearLayout>