<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="@dimen/default_card_horizontal_margin"
    android:paddingLeft="@dimen/default_card_horizontal_margin"
    android:paddingTop="@dimen/default_card_vertical_margin"
    android:paddingBottom="@dimen/default_card_vertical_margin"
    android:id="@+id/answer_card_frame"
    android:layout_height="match_parent">
    <!--<android.support.v7.widget.CardView-->
        <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/card_view"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--card_view:cardCornerRadius="@dimen/default_card_view_radius">-->
        <RelativeLayout
            android:id="@+id/answer_card_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/answer_card_description"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_below="@+id/answer_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/answer_card_choice_a_image"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fi_choice_a_icn"/>
                <TextView
                    android:id="@+id/answer_card_choice_a_num"
                    android:layout_toRightOf="@+id/answer_card_choice_a_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/answer_card_choice_b_image"
                    android:layout_toRightOf="@+id/answer_card_choice_a_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fi_choice_b_icn"/>
                <TextView
                    android:id="@+id/answer_card_choice_b_num"
                    android:layout_toRightOf="@+id/answer_card_choice_b_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/answer_card_card_last_date"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--<TextView-->
                    <!--android:id="@+id/answer_card_num_of_addition"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"/>-->
            </RelativeLayout>
        </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/impression_divider_height"
        android:background="@color/impression_grey"/>
</RelativeLayout>