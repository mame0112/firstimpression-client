<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/card_chart_vertical_margin"
        android:layout_marginBottom="@dimen/card_chart_vertical_margin"
        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/main_choice_button_horizontal_margin"
            android:layout_marginRight="@dimen/main_choice_button_horizontal_margin"
            android:layout_marginTop="@dimen/main_choice_button_horizontal_padding"
            android:layout_marginBottom="@dimen/card_chart_vertical_padding"
            android:id="@+id/cardRelative">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/main_choice_button_horizontal_padding"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="@dimen/card_margin_left"
                    android:id="@+id/main_card_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/main_card_username"
                    android:textColor="@color/impression_dark_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/main_card_title_divider"
                    android:textColor="@color/impression_dark_grey"
                    android:paddingLeft="@dimen/card_subtext_divider"
                    android:paddingRight="@dimen/card_subtext_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/main_card_postdate"
                    android:textColor="@color/impression_dark_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/card_margin_left"
                android:id="@+id/main_card_description"
                android:textColor="@color/impression_black"
                android:textSize="@dimen/fi_font_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_choice_button_vertical_padding"
                android:paddingBottom="@dimen/main_choice_button_vertical_padding"
                android:paddingLeft="@dimen/main_choice_button_horizontal_padding"
                android:paddingRight="@dimen/main_choice_button_horizontal_padding"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/main_card_choise_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/impression_white"
                    android:background="@drawable/choice_button_a"
                    android:layout_marginRight="@dimen/main_choice_button_horizontal_margin"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/main_card_choise_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/impression_white"
                    android:layout_marginLeft="@dimen/main_choice_button_horizontal_margin"
                    android:background="@drawable/choice_button_b"
                    android:layout_weight="1"/>
            </LinearLayout>
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/impression_divider_height"-->
                <!--android:background="@color/impression_grey"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>