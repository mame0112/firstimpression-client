<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:text="@string/signup_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center" />
    <EditText
        android:id="@+id/signup_username"
        android:layout_width="match_parent"
        android:hint="@string/sign_in_hint_username"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:hint="@string/sign_in_hint_password"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/sign_up_service_notice"
        android:gravity="right"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/signup_tos"
            android:layout_width="wrap_content"
            android:text="@string/sign_up_tos"
            android:gravity="right"
            android:textColor="@color/impressionAccent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/impression_divider"
            android:gravity="right"
            android:layout_marginLeft="@dimen/welcome_divider_margin"
            android:layout_marginRight="@dimen/welcome_divider_margin"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/signup_privacy_policy"
            android:layout_width="wrap_content"
            android:text="@string/sign_up_privacy_policy"
            android:gravity="right"
            android:textColor="@color/impressionAccent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_button"/>
</LinearLayout>