<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/prompt_horizontal_padding"
    android:paddingRight="@dimen/prompt_horizontal_padding"
    android:paddingBottom="@dimen/dialog_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/notification_dialog_desc"
        android:paddingTop="@dimen/dialog_vertical_padding"
        android:paddingBottom="@dimen/dialog_vertical_padding"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:textSize="@dimen/fi_font_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/notification_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/prompt_vertical_margin"
        android:layout_marginBottom="@dimen/prompt_vertical_margin"
        android:layout_height="@dimen/impression_divider_height"
        android:layout_width="match_parent"
        android:background="@color/impression_grey"/>
    <TextView
        android:id="@+id/prompt_dialog_already_account_exist"
        android:text="@string/notification_dialog_already_have_account"
        android:paddingBottom="@dimen/dialog_vertical_padding"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:gravity="right"
        android:textColor="@color/impressionAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>