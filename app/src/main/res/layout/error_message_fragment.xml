<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/impression_transparent_white"
    android:layout_marginRight="@dimen/dialog_horizontal_margin"
    android:layout_marginLeft="@dimen/dialog_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/main_choice_button_vertical_margin"
        android:layout_marginBottom="@dimen/main_choice_button_vertical_margin"
        android:paddingTop="@dimen/main_choice_button_vertical_padding"
        android:paddingBottom="@dimen/main_choice_button_vertical_padding"
        android:background="@color/impression_warning_light_pink"
        android:id="@+id/error_fragment_title"
        android:text="@string/error_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"/>
</LinearLayout>