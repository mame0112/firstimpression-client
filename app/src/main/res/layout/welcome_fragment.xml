<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/welcome_service_description"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/fi_font_middle"
        android:textColor="@color/impression_black"/>
    <Button android:id="@+id/signin_button"
        android:layout_width="match_parent"
        android:text="@string/welcome_signin_button"
        android:layout_above="@+id/signup_button"
        android:layout_height="wrap_content"
        android:textColor="@color/impression_black"
        android:layout_marginBottom="@dimen/welcome_button_margin"
        android:background="@drawable/welcome_frame_button">
    </Button>

    <Button android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:text="@string/welcome_signup_button"
        android:textColor="@color/impression_white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/welcome_button_margin"
        android:background="@drawable/welcome_action2_button">
    </Button>
</RelativeLayout>