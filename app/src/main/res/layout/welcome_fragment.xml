<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:text="Welcome fragment" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center" />

    <Button android:id="@+id/signin_button"
        android:layout_width="match_parent"
        android:text="@string/welcome_signin_button"
        android:layout_height="wrap_content">
    </Button>

    <Button android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:text="@string/welcome_signup_button"
        android:layout_height="wrap_content">
    </Button>
</LinearLayout>