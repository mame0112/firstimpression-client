<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="@dimen/default_form_vertical_block"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/default_form_horizontal_space"
        android:layout_marginRight="@dimen/default_form_horizontal_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_view_vartical_margin">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_question_description_wrapper"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="@dimen/default_view_vartical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/create_question_description"
                android:hint="@string/str_create_question_description"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_question_choice_a_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/create_question_choice_a"
                android:hint="@string/str_create_question_choice_a"
                android:layout_marginRight="@dimen/dialog_horizontal_margin"
                android:layout_marginLeft="@dimen/dialog_horizontal_margin"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_question_choice_b_wrapper"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/create_question_choice_b"
                android:hint="@string/str_create_question_choice_b"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/create_question_create_button"
            android:text="@string/str_create_question_create_button"
            android:background="@drawable/welcome_action_button"
            android:textColor="@drawable/welcome_action_button_text"
            android:layout_marginBottom="@dimen/default_view_vartical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_form_vertical_block"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>